<div class="container">
  <div class="row">
    <form class="login-form" {{action login model on="submit"}}>
      <h3 class="login-form__label">Username</h3>
      <p class="form-field">{{input type="text" placeholder="Username" value=model.userName}}</p>
      <h3 class="login-form__label">Email</h3>
      <p class="form-field">{{input type="password" placeholder="Password" value=model.password}}</p>
      <button class="login-form__button">Login</button>
    </form>
  </div>
</div>


