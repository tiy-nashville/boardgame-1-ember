<div class="container">
  <div class="row">
    <div class="grid-item">
      {{#link-to 'sorry'}}
          <img class="game-logo__sorry" src="http://www.hasbro.com/common/productimages/en_CA/590e193450569047f59f9f4e9b948900/7104EB9A50569047F5BAB04293797731.jpg" alt="">
        {{/link-to}}
        <div class="game-info__sorry">
          <div class="game-info__left">
            <h2 class="game-name">Sorry</h2>
            <i class="fa fa-circle" aria-hidden="true"></i>
            </div>
          <p class="player-amount">2-4 Players</p>
        </div>
      </div>

      <div class="grid-item">
        {{#link-to 'monopoly'}}
          <img src="http://d2ydh70d4b5xgv.cloudfront.net/images/2/3/classic-monopoly-board-game-complete-new-sealed-family-edition-cardboard-510f1f41a9d16a660f7d050a316162ee.jpg" alt="" class="game-logo__monopoly">
        {{/link-to}}
        <div class="game-info__monopoly">
        <div class="game-info__left">
          <h2 class="game-name">Monopoly</h2>
          <i class="fa fa-circle" aria-hidden="true"></i>
          </div>
        <p class="player-amount">2-6 Players</p>
        </div>
      </div>

      <div class="grid-item">
        {{#link-to 'life'}}
          <img src="http://www.uplay.it/www.uplay.it_The_Game_of_Life--400x400.png" alt="" class="game-logo__life">
        {{/link-to}}
        <div class="game-info__life">
        <div class="game-info__left">
          <h2 class="game-name">Life</h2>
          <i class="fa fa-circle" aria-hidden="true"></i>
          </div>
        <p class="player-amount">2-4 Players</p>
      </div>
      </div>
    </div>
</div>
